@model LoginUser


<div class="container">
    <div class="row">
        <div class="col-lg-10 col-xl-7 mx-auto">
            <h3 class="display-4">Never Left Behind</h3>
            <p class="text-muted mb-4">"Not All Wounds Are Visible"</p>
            <form asp-action="Login" asp-controller="Home" method="POST">
            <div class="form-group">
                <label asp-for="LoginEmail"></label>
                <span
                    class="text-danger font-weight-bold"
                    asp-validation-for="LoginEmail"
                ></span>
                <input class="form-control rounded-pill border-0 shadow-sm px-4" asp-for="LoginEmail" />
            </div>
            <div class="form-group">
                <label asp-for="LoginPassword"></label>
                <span
                    class="text-danger font-weight-bold"
                    asp-validation-for="LoginPassword"
                ></span>
                <input class="form-control rounded-pill border-0 shadow-sm px-4"  asp-for="LoginPassword" value="asdfasdf" />
            </div>
            <button type="submit" class="btn btn-primary btn-block text-uppercase mb-2 rounded-pill shadow-sm">Sign in</button>
        </form>
            <a href="register"><input type="button" value="Register" class="btn btn-primary btn-block text-uppercase mb-2 rounded-pill shadow-sm" /></a>
        </div>
    </div>
</div><!-- End -->